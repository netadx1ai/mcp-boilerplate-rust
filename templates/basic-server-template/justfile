# Justfile for Basic MCP Server Template Development
# Use 'just <recipe>' to run commands

# Default recipe - show available commands
default:
    @just --list

# Development commands
dev:
    @echo "ğŸš€ Starting development mode..."
    cargo watch -x 'run'

# Build commands
build:
    @echo "ğŸ”¨ Building server..."
    cargo build

build-release:
    @echo "ğŸ”¨ Building optimized release..."
    cargo build --release

# Testing commands
test:
    @echo "ğŸ§ª Running all tests..."
    cargo test

test-verbose:
    @echo "ğŸ§ª Running tests with output..."
    cargo test -- --nocapture

test-specific TEST:
    @echo "ğŸ§ª Running specific test: {{TEST}}"
    cargo test {{TEST}}

# Code quality commands
fmt:
    @echo "ğŸ¨ Formatting code..."
    cargo fmt --all

clippy:
    @echo "ğŸ“ Running clippy..."
    cargo clippy --all-targets --all-features

check:
    @echo "âœ… Checking code..."
    cargo check --all-targets

# Complete verification pipeline
verify: fmt clippy check test
    @echo "âœ… All verification steps passed!"

# Documentation commands
doc:
    @echo "ğŸ“š Generating documentation..."
    cargo doc --no-deps --open

doc-build:
    @echo "ğŸ“š Building documentation..."
    cargo doc --no-deps

# Performance and profiling
bench:
    @echo "âš¡ Running benchmarks..."
    cargo test --release -- --ignored

profile:
    @echo "ğŸ“Š Profiling server startup..."
    cargo build --release
    time ./target/release/basic-server-template --help

# Security commands
audit:
    @echo "ğŸ”’ Security audit..."
    cargo audit

audit-fix:
    @echo "ğŸ”’ Fixing security issues..."
    cargo audit fix

# Cleanup commands
clean:
    @echo "ğŸ§¹ Cleaning build artifacts..."
    cargo clean

clean-all: clean
    @echo "ğŸ§¹ Deep cleaning..."
    rm -rf target/
    rm -f Cargo.lock

# Template customization helpers
customize NAME EMAIL:
    @echo "ğŸ¯ Customizing template for {{NAME}} <{{EMAIL}}>..."
    sed -i.bak 's/basic-server-template/{{NAME}}/g' Cargo.toml
    sed -i.bak 's/Your Name <your.email@example.com>/{{NAME}} <{{EMAIL}}>/g' Cargo.toml
    sed -i.bak 's/basic_server_template/{{replace(NAME, "-", "_")}}/g' src/main.rs
    @echo "âœ… Template customized! Remember to update business logic in src/main.rs"

# Installation helpers
install-deps:
    @echo "ğŸ“¦ Installing development dependencies..."
    cargo install cargo-watch cargo-audit cargo-flamegraph just

setup: install-deps
    @echo "ğŸ¯ Development environment setup complete!"
    @echo "Available commands:"
    @just --list

# Container commands
docker-build NAME="basic-server-template":
    @echo "ğŸ³ Building Docker image: {{NAME}}"
    docker build -t {{NAME}} .

docker-run NAME="basic-server-template":
    @echo "ğŸ³ Running Docker container: {{NAME}}"
    docker run -it --rm {{NAME}}

# Quick recipes for common workflows
quick-test: fmt clippy test
    @echo "ğŸš€ Quick verification complete!"

full-check: clean verify doc-build audit
    @echo "ğŸ† Full quality check complete!"

# Release preparation
release-prep VERSION:
    @echo "ğŸš€ Preparing release {{VERSION}}..."
    sed -i.bak 's/version = "0.1.0"/version = "{{VERSION}}"/g' Cargo.toml
    just verify
    git add .
    git commit -m "Release {{VERSION}}"
    git tag -a "v{{VERSION}}" -m "Release {{VERSION}}"
    @echo "âœ… Release {{VERSION}} prepared! Run 'git push origin v{{VERSION}}' to publish"

# Performance testing
perf-test:
    @echo "âš¡ Performance testing..."
    cargo build --release
    @echo "Startup time:"
    hyperfine './target/release/basic-server-template --help' --warmup 3
    @echo "Memory usage test requires running server manually"

# Development workflow shortcuts
dev-loop: fmt clippy test
    @echo "ğŸ”„ Development loop complete - ready for changes!"

# Help for new developers
help:
    @echo "ğŸ¯ Basic MCP Server Template Development"
    @echo ""
    @echo "Quick Start:"
    @echo "  just setup          # Install dependencies"
    @echo "  just customize NAME EMAIL  # Customize template"
    @echo "  just dev-loop       # Format + check + test"
    @echo ""
    @echo "Common Commands:"
    @echo "  just build          # Build debug version"
    @echo "  just test           # Run tests"
    @echo "  just verify         # Full verification"
    @echo "  just doc            # Generate and open docs"
    @echo ""
    @echo "Quality Assurance:"
    @echo "  just full-check     # Complete quality check"
    @echo "  just audit          # Security audit"
    @echo "  just perf-test      # Performance testing"